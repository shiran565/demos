.header{
  display: flex;
  height:96rpx;
  padding: 0 20rpx;

  border-bottom: 1rpx solid rgba(0,0,0,.1);
  align-items:center;
  flex-direction: row;
}

.header-item{
  height: 60rpx;
  flex: auto;
}

.header-icon_user{
  text-align: right;
}

.swiper-prod{
  width: 100%;
  height:750rpx;
}

.slide-image{
  height:750rpx;
  width:750rpx;
}

.operation{
  display: flex;
  padding: 30rpx 20rpx;
  align-items: center;
  background-color: #f4f4f4;

  border-top: 1rpx solid #e6e7e9;
  border-bottom: 1rpx solid #e6e7e9;
}

.operation-item{
  height: 80rpx;
  flex: auto;
}

.operation-title{
  font-size: 44rpx;
  line-height: 44rpx;
  color:#000;
}

.operation-button{
  text-align: right;
}

.btn-buy{
  display: inline-block;
  width: 240rpx;
  height: 80rpx;

  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 6rpx;
  background-color: #008cd6
}

.summary-item{
  position: relative;
  display: flex;
  height: 108rpx;
  padding: 10rpx 30rpx;

  font-size: 30rpx;
  color: #333;

  border-bottom: 1rpx rgba(0,0,0,.05) solid;
  align-items:center;
}

.summary-icon,
.summary-content{
  flex:0 1 auto;
}

.summary-icon{
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  background: url(http://m.vivo.com.cn/asset/img/vivo-mpro-ico.png) no-repeat;
  background-size: 480rpx 480rpx;
}

.icon-summary{
  background-position: 0 -200rpx;
}

.icon-standard{
  background-position: -48rpx -200rpx;
}

.icon-rotate{
  background-position: -95rpx -200rpx;
}

.icon-service{
  background-position: -190rpx -200rpx;
}

.summary-item::after{
  content: ' ';
  position: absolute;
  right: 30rpx;
  top:50%;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
  transform: scale(.8);
  background: url(http://m.vivo.com.cn/asset/img/vivo-mpro-ico.png) 0 -290rpx no-repeat;
  background-size: 480rpx 480rpx;
}

.footer{
  padding: 40rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;

  background:#292a2c;
}

.footer-logo{
  width: 112rpx;
  height: 30rpx;
  margin-right: 40rpx;
}

.footer-text{
  font-size: 24rpx;
  color: #fff;
  display: block;
}

.footer-text:first-child{
  margin-bottom: 10rpx;
}